<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="dibly.em.mainmodule">

    <uses-feature android:name="android.hardware.camera"/>

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:icon="@drawable/logo"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen">


        <activity
            android:name=".activity.HomeActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.CameraActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            />

        <activity
            android:name=".activity.TemplateMatchingActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".activity.CircleDetectionActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".activity.FindCoutourActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".activity.DetectObjectActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".activity.FindFeatureActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".activity.DetectObjectOnCamActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="landscape"
            />

    </application>

</manifest>
